<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.ums.system.controller.CreateQuizController"
      spacing="15" styleClass="create-quiz-root"
      stylesheets="@create_quiz.css">

    <Label text="Create New Quiz" styleClass="create-quiz-title"/>

    <Separator/>

    <!-- Quiz Basic Info -->
    <VBox spacing="10">
        <Label text="Quiz Information" styleClass="create-quiz-section-label"/>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Quiz Title:" styleClass="create-quiz-field-label"/>
            <TextField fx:id="quizTitleField" promptText="Enter quiz title" styleClass="create-quiz-text-field" HBox.hgrow="ALWAYS"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Course:" styleClass="create-quiz-field-label"/>
            <ComboBox fx:id="courseCombo" promptText="Select a course" styleClass="create-quiz-combo-box" HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
        </HBox>

        <HBox spacing="10" alignment="CENTER_LEFT">
            <Label text="Number of Questions:" styleClass="create-quiz-field-label"/>
            <Spinner fx:id="numQuestionsSpinner" initialValue="1" min="1" max="50" editable="true" styleClass="create-quiz-spinner" prefWidth="100"/>
            <Button text="Generate Question Forms" onAction="#handleGenerateQuestions" styleClass="generate-questions-button"/>
        </HBox>
    </VBox>

    <Separator/>

    <!-- Questions ScrollPane -->
    <VBox spacing="10" VBox.vgrow="ALWAYS">
        <Label text="Questions" styleClass="create-quiz-section-label"/>
        <ScrollPane fx:id="questionsScrollPane" fitToWidth="true" VBox.vgrow="ALWAYS"
                    styleClass="questions-scroll-pane" prefHeight="400">
            <VBox fx:id="questionsContainer" spacing="15" styleClass="questions-container"/>
        </ScrollPane>
    </VBox>

    <Separator/>

    <!-- Action Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
        <Button text="Cancel" onAction="#handleCancel" prefWidth="100" styleClass="cancel-button"/>
        <Button text="Create Quiz" onAction="#handleCreateQuiz" prefWidth="120" styleClass="create-quiz-button"/>
    </HBox>

</VBox>
