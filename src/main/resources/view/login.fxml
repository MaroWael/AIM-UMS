<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.ums.system.controller.LoginController"
           prefHeight="700" prefWidth="1000"
           styleClass="root-container"
           stylesheets="@login.css">

    <VBox alignment="CENTER" spacing="0">

        <!-- Main Login Card with Modern Design -->
        <VBox alignment="CENTER" spacing="15"
              styleClass="login-card"
              maxWidth="420" minWidth="420">
            <padding>
                <Insets top="30" right="40" bottom="30" left="40"/>
            </padding>

            <!-- Logo/Icon Section with gradient background -->
            <VBox alignment="CENTER" spacing="5" styleClass="logo-section">
                <Label text="ðŸŽ“" styleClass="logo-icon"/>
            </VBox>

            <!-- Title Section -->
            <VBox alignment="CENTER" spacing="5">
                <Label text="Welcome Back!" styleClass="title-main"/>
                <Label text="University Management System" styleClass="title-subtitle"/>
                <Label text="Sign in to continue your journey" styleClass="title-description"/>
            </VBox>

            <!-- Email Field with Icon -->
            <VBox spacing="6" styleClass="input-container">
                <Label text="ðŸ“§ Email Address" styleClass="field-label"/>
                <TextField fx:id="emailField"
                          promptText="Enter your email address"
                          styleClass="input-field">
                    <font>
                        <Font size="13"/>
                    </font>
                </TextField>
            </VBox>

            <!-- Password Field with Icon -->
            <VBox spacing="6" styleClass="input-container">
                <Label text="ðŸ”’ Password" styleClass="field-label"/>
                <PasswordField fx:id="passwordField"
                              promptText="Enter your password"
                              styleClass="input-field">
                    <font>
                        <Font size="13"/>
                    </font>
                </PasswordField>
            </VBox>

            <!-- Error Label with better styling -->
            <Label fx:id="errorLabel"
                   text=""
                   styleClass="error-label"
                   wrapText="true"
                   maxWidth="350"
                   visible="false"/>

            <!-- Login Button with Gradient -->
            <Button fx:id="loginButton"
                    text="ðŸš€ Sign In"
                    onAction="#handleLogin"
                    defaultButton="true"
                    maxWidth="Infinity"
                    styleClass="login-button">
                <font>
                    <Font size="14"/>
                </font>
            </Button>

            <!-- Progress Indicator -->
            <ProgressIndicator fx:id="progressIndicator"
                              prefWidth="40"
                              prefHeight="40"
                              visible="false"
                              styleClass="progress-indicator"/>

            <!-- Divider -->
            <HBox alignment="CENTER" spacing="10" styleClass="divider-container">
                <Region prefHeight="1" prefWidth="80" styleClass="divider-line"/>
                <Label text="Test Accounts" styleClass="divider-text"/>
                <Region prefHeight="1" prefWidth="80" styleClass="divider-line"/>
            </HBox>

            <!-- Info Cards for Test Credentials -->
