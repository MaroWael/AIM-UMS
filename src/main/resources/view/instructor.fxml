<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!--
instructor.fxml - Instructor panel UI
Provides tabs for viewing courses, students, managing quizzes and results
Enhanced UI with modern design
-->

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ums.system.controller.InstructorController"
            prefHeight="750" prefWidth="1200"
            styleClass="instructor-root"
            stylesheets="@instructor.css">

    <!-- Top: Header -->
    <top>
        <VBox styleClass="instructor-header">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="welcomeLabel" text="ðŸ‘¨â€ðŸ« Welcome, Instructor!" styleClass="instructor-welcome-label"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸšª Logout" onAction="#handleLogout" styleClass="instructor-logout-button">
                    <font>
                        <Font name="System Bold" size="13"/>
                    </font>
                </Button>
            </HBox>

            <Label fx:id="userInfoLabel" text="Role: Instructor  |  ID: -  |  Department: -" styleClass="instructor-user-info">
                <VBox.margin>
                    <Insets top="8"/>
                </VBox.margin>
                <font>
                    <Font name="System" size="13"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Center: Tab Pane -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" styleClass="instructor-tab-pane">

            <!-- MY COURSES TAB -->
            <Tab text="ðŸ“š My Courses">
                <VBox spacing="20" styleClass="instructor-content-section">

                    <Label text="ðŸ“š My Assigned Courses" styleClass="instructor-section-title">
                        <font>
                            <Font name="System Bold" size="22"/>
                        </font>
                    </Label>

                    <!-- Info Banner -->
                    <HBox spacing="15" alignment="CENTER_LEFT" styleClass="info-banner">
                        <Label text="ðŸ“–" styleClass="info-banner-icon"/>
                        <VBox spacing="3">
                            <Label text="Courses you are currently teaching" styleClass="info-banner-title">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <Label text="View and manage your course assignments" styleClass="info-banner-subtitle"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ”„ Refresh" onAction="#loadMyCourses" styleClass="instructor-refresh-button">
                            <font>
                                <Font name="System Bold" size="12"/>
                            </font>
                        </Button>
                    </HBox>

                    <!-- Courses Table -->
                    <VBox spacing="12" VBox.vgrow="ALWAYS" styleClass="instructor-table-card">
                        <Label text="ðŸ“‹ Course List" styleClass="instructor-table-title">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <TableView fx:id="myCoursesTable" VBox.vgrow="ALWAYS" styleClass="instructor-table">
                            <columns>
                                <TableColumn fx:id="courseIdColumn" text="Code" prefWidth="100"/>
                                <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="280"/>
                                <TableColumn fx:id="courseLevelColumn" text="Level" prefWidth="80"/>
                                <TableColumn fx:id="courseMajorColumn" text="Major" prefWidth="140"/>
                                <TableColumn fx:id="courseLectureTimeColumn" text="Lecture Time" prefWidth="150"/>
                                <TableColumn fx:id="courseStudentsColumn" text="Students" prefWidth="100"/>
                                <TableColumn fx:id="courseQuizzesColumn" text="Quizzes" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <!-- STUDENTS TAB -->
            <Tab text="ðŸŽ“ Students">
                <VBox spacing="20" styleClass="instructor-content-section">

                    <Label text="ðŸŽ“ Students in My Courses" styleClass="instructor-section-title">
                        <font>
                            <Font name="System Bold" size="22"/>
                        </font>
                    </Label>

                    <!-- Course Selection Card -->
                    <VBox spacing="15" styleClass="instructor-form-card">
                        <Label text="ðŸ” Select Course" styleClass="instructor-form-title">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Course:" styleClass="instructor-field-label">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <ComboBox fx:id="courseCombo" prefWidth="400" promptText="Select a course to view enrolled students"
                                      styleClass="instructor-combo-box"
                                      HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                            <Button text="ðŸ“‚ Load Students" onAction="#handleLoadStudents" styleClass="instructor-primary-button">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Students Table -->
                    <VBox spacing="12" VBox.vgrow="ALWAYS" styleClass="instructor-table-card">
                        <Label text="ðŸ“‹ Enrolled Students" styleClass="instructor-table-title">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS" styleClass="instructor-table">
                            <columns>
                                <TableColumn fx:id="studentIdColumn" text="ID" prefWidth="70"/>
                                <TableColumn fx:id="studentNameColumn" text="Name" prefWidth="240"/>
                                <TableColumn fx:id="studentEmailColumn" text="Email" prefWidth="280"/>
                                <TableColumn fx:id="studentLevelColumn" text="Level" prefWidth="90"/>
                                <TableColumn fx:id="studentMajorColumn" text="Major" prefWidth="180"/>
                                <TableColumn fx:id="studentDepartmentColumn" text="Department" prefWidth="190"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <!-- QUIZZES TAB -->
            <Tab text="ðŸ“ My Quizzes">
                <VBox spacing="20" styleClass="instructor-content-section">

                    <Label text="ðŸ“ Quiz Management" styleClass="instructor-section-title">
                        <font>
                            <Font name="System Bold" size="22"/>
                        </font>
                    </Label>

                    <!-- Create Quiz Form -->
                    <VBox spacing="15" styleClass="instructor-form-card">
                        <Label text="âž• Create New Quiz" styleClass="instructor-form-title">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <TextField fx:id="quizTitleField" promptText="Enter quiz title..." prefWidth="350"
                                       styleClass="instructor-text-field"
                                       HBox.hgrow="SOMETIMES"/>
                            <ComboBox fx:id="quizCourseCombo" promptText="Select Course" prefWidth="300"
                                      styleClass="instructor-combo-box"
                                      HBox.hgrow="SOMETIMES" maxWidth="Infinity"/>
                            <Button text="âœ“ Create Quiz" onAction="#handleCreateQuiz" styleClass="instructor-primary-button">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Quizzes Table -->
                    <VBox spacing="12" VBox.vgrow="ALWAYS" styleClass="instructor-table-card">
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <Label text="ðŸ“‹ My Quizzes" styleClass="instructor-table-title">
                                <font>
                                    <Font name="System Bold" size="16"/>
                                </font>
                            </Label>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="ðŸ”„ Refresh" onAction="#loadMyQuizzes" styleClass="instructor-refresh-alt">
                                <font>
                                    <Font name="System Bold" size="12"/>
                                </font>
                            </Button>
                            <Button text="ðŸ—‘ï¸ Delete Selected" onAction="#handleDeleteQuiz" styleClass="instructor-delete-button">
                                <font>
                                    <Font name="System Bold" size="12"/>
                                </font>
                            </Button>
                        </HBox>

                        <TableView fx:id="quizzesTable" VBox.vgrow="ALWAYS" styleClass="instructor-table">
                            <columns>
                                <TableColumn fx:id="quizIdColumn" text="ID" prefWidth="60"/>
                                <TableColumn fx:id="quizTitleColumn" text="Quiz Title" prefWidth="500"/>
                                <TableColumn fx:id="quizCourseColumn" text="Course ID" prefWidth="120"/>
                                <TableColumn fx:id="quizQuestionsColumn" text="Questions" prefWidth="120"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <!-- QUIZ RESULTS TAB -->
            <Tab text="ðŸ“Š Quiz Results">
                <VBox spacing="20" styleClass="instructor-content-section">

                    <Label text="ðŸ“Š Quiz Results" styleClass="instructor-section-title">
                        <font>
                            <Font name="System Bold" size="22"/>
                        </font>
                    </Label>

                    <!-- Quiz Selection Card -->
                    <VBox spacing="15" styleClass="instructor-form-card">
                        <Label text="ðŸ” Select Quiz" styleClass="instructor-form-title">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Quiz:" styleClass="instructor-field-label">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <ComboBox fx:id="resultQuizCombo" prefWidth="350" promptText="Select a quiz to view results"
                                      styleClass="instructor-combo-box"
                                      HBox.hgrow="SOMETIMES" maxWidth="Infinity"/>
                            <Button text="ðŸ“‚ Load Results" onAction="#handleLoadResults" styleClass="load-results-button">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Button>
                            <Button text="ðŸ“‘ View All Results" onAction="#handleViewAllResults" styleClass="view-all-button">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Results Table -->
                    <VBox spacing="12" VBox.vgrow="ALWAYS" styleClass="instructor-table-card">
                        <Label text="ðŸ“‹ Student Results" styleClass="instructor-table-title">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS" styleClass="instructor-table">
                            <columns>
                                <TableColumn fx:id="resultStudentIdColumn" text="Student ID" prefWidth="90"/>
                                <TableColumn fx:id="resultStudentNameColumn" text="Student Name" prefWidth="200"/>
                                <TableColumn fx:id="resultQuizIdColumn" text="Quiz ID" prefWidth="80"/>
                                <TableColumn fx:id="resultQuizTitleColumn" text="Quiz Title" prefWidth="240"/>
                                <TableColumn fx:id="resultCourseCodeColumn" text="Course Code" prefWidth="120"/>
                                <TableColumn fx:id="resultScoreColumn" text="Score" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

        </TabPane>
    </center>

</BorderPane>
