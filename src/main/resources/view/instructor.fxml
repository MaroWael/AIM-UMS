<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<!--
instructor.fxml - Instructor panel UI
Provides tabs for viewing courses, students, managing quizzes and results
Enhanced UI with modern design
-->

<?import java.lang.String?>
<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ums.system.controller.InstructorController"
            prefHeight="750" prefWidth="1200"
            style="-fx-background-color: linear-gradient(to bottom, #f0f9ff, #e0f2fe);">

    <!-- Top: Header -->
    <top>
        <VBox style="-fx-background-color: linear-gradient(to right, #0ea5e9 0%, #06b6d4 50%, #14b8a6 100%); -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 10, 0, 0, 3);">
            <padding>
                <Insets top="20" right="30" bottom="20" left="30"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="welcomeLabel" text="ðŸ‘¨â€ðŸ« Welcome, Instructor!" style="-fx-text-fill: white; -fx-font-size: 26px; -fx-font-weight: bold; -fx-effect: dropshadow(gaussian, rgba(0,0,0,0.3), 5, 0, 0, 1);"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="ðŸšª Logout" onAction="#handleLogout"
                        style="-fx-background-color: white; -fx-text-fill: #0ea5e9; -fx-font-weight: bold; -fx-padding: 10 25; -fx-cursor: hand; -fx-background-radius: 25; -fx-font-size: 13px; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.2), 5, 0, 0, 2);">
                    <font>
                        <Font name="System Bold" size="13"/>
                    </font>
                </Button>
            </HBox>

            <Label fx:id="userInfoLabel" text="Role: Instructor  |  ID: -  |  Department: -"
                   style="-fx-text-fill: rgba(255,255,255,0.9); -fx-font-size: 13px;">
                <VBox.margin>
                    <Insets top="8"/>
                </VBox.margin>
                <font>
                    <Font name="System" size="13"/>
                </font>
            </Label>
        </VBox>
    </top>

    <!-- Center: Tab Pane -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 15; -fx-background-color: transparent;">

            <!-- MY COURSES TAB -->
            <Tab text="ðŸ“š My Courses">
                <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: transparent;">

                    <Label text="ðŸ“š My Assigned Courses" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0f172a;">
                        <font>
                            <Font name="System Bold" size="22"/>
                        </font>
                    </Label>

                    <!-- Info Banner -->
                    <HBox spacing="15" alignment="CENTER_LEFT" style="-fx-background-color: linear-gradient(to right, #e0f2fe, #dbeafe); -fx-padding: 15 20; -fx-background-radius: 10; -fx-border-color: #0ea5e9; -fx-border-radius: 10; -fx-border-width: 1;">
                        <Label text="ðŸ“–" style="-fx-font-size: 20px;"/>
                        <VBox spacing="3">
                            <Label text="Courses you are currently teaching" style="-fx-font-size: 13px; -fx-text-fill: #1e40af; -fx-font-weight: bold;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <Label text="View and manage your course assignments" style="-fx-font-size: 11px; -fx-text-fill: #3b82f6;"/>
                        </VBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="ðŸ”„ Refresh" onAction="#loadMyCourses"
                                style="-fx-background-color: #0ea5e9; -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 8 20; -fx-font-size: 12px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(14,165,233,0.3), 5, 0, 0, 2);">
                            <font>
                                <Font name="System Bold" size="12"/>
                            </font>
                        </Button>
                    </HBox>

                    <!-- Courses Table -->
                    <VBox spacing="12" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 3);">
                        <Label text="ðŸ“‹ Course List" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #475569;">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <TableView fx:id="myCoursesTable" VBox.vgrow="ALWAYS"
                                   style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-border-width: 1;">
                            <columns>
                                <TableColumn fx:id="courseIdColumn" text="Code" prefWidth="100" style="-fx-font-weight: bold;"/>
                                <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="280"/>
                                <TableColumn fx:id="courseLevelColumn" text="Level" prefWidth="80"/>
                                <TableColumn fx:id="courseMajorColumn" text="Major" prefWidth="140"/>
                                <TableColumn fx:id="courseLectureTimeColumn" text="Lecture Time" prefWidth="150"/>
                                <TableColumn fx:id="courseStudentsColumn" text="Students" prefWidth="100"/>
                                <TableColumn fx:id="courseQuizzesColumn" text="Quizzes" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <!-- STUDENTS TAB -->
            <Tab text="ðŸŽ“ Students">
                <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: transparent;">

                    <Label text="ðŸŽ“ Students in My Courses" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0f172a;">
                        <font>
                            <Font name="System Bold" size="22"/>
                        </font>
                    </Label>

                    <!-- Course Selection Card -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 3);">
                        <Label text="ðŸ” Select Course" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #475569;">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Course:" style="-fx-font-size: 13px; -fx-text-fill: #475569; -fx-font-weight: bold; -fx-min-width: 70;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <ComboBox fx:id="courseCombo" prefWidth="400" promptText="Select a course to view enrolled students"
                                      style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-padding: 5; -fx-font-size: 13px;"
                                      HBox.hgrow="ALWAYS" maxWidth="Infinity"/>
                            <Button text="ðŸ“‚ Load Students" onAction="#handleLoadStudents"
                                    style="-fx-background-color: linear-gradient(to right, #0ea5e9, #06b6d4); -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 25; -fx-font-size: 13px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(14,165,233,0.3), 5, 0, 0, 2);">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Students Table -->
                    <VBox spacing="12" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 3);">
                        <Label text="ðŸ“‹ Enrolled Students" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #475569;">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS"
                                   style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-border-width: 1;">
                            <columns>
                                <TableColumn fx:id="studentIdColumn" text="ID" prefWidth="70" style="-fx-font-weight: bold;"/>
                                <TableColumn fx:id="studentNameColumn" text="Name" prefWidth="240"/>
                                <TableColumn fx:id="studentEmailColumn" text="Email" prefWidth="280"/>
                                <TableColumn fx:id="studentLevelColumn" text="Level" prefWidth="90"/>
                                <TableColumn fx:id="studentMajorColumn" text="Major" prefWidth="180"/>
                                <TableColumn fx:id="studentDepartmentColumn" text="Department" prefWidth="190"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <!-- QUIZZES TAB -->
            <Tab text="ðŸ“ My Quizzes">
                <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: transparent;">

                    <Label text="ðŸ“ Quiz Management" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0f172a;">
                        <font>
                            <Font name="System Bold" size="22"/>
                        </font>
                    </Label>

                    <!-- Create Quiz Form -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 3);">
                        <Label text="âž• Create New Quiz" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #475569;">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <TextField fx:id="quizTitleField" promptText="Enter quiz title..." prefWidth="350"
                                       style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-padding: 10; -fx-font-size: 13px;"
                                       HBox.hgrow="SOMETIMES"/>
                            <ComboBox fx:id="quizCourseCombo" promptText="Select Course" prefWidth="300"
                                      style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-padding: 5; -fx-font-size: 13px;"
                                      HBox.hgrow="SOMETIMES" maxWidth="Infinity"/>
                            <Button text="âœ“ Create Quiz" onAction="#handleCreateQuiz"
                                    style="-fx-background-color: linear-gradient(to right, #0ea5e9, #06b6d4); -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 25; -fx-font-size: 13px; -fx-effect: dropshadow(three-pass-box, rgba(14,165,233,0.3), 5, 0, 0, 2);">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Quizzes Table -->
                    <VBox spacing="12" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 3);">
                        <HBox spacing="12" alignment="CENTER_LEFT">
                            <Label text="ðŸ“‹ My Quizzes" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #475569;">
                                <font>
                                    <Font name="System Bold" size="16"/>
                                </font>
                            </Label>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="ðŸ”„ Refresh" onAction="#loadMyQuizzes"
                                    style="-fx-background-color: #e2e8f0; -fx-text-fill: #475569; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 8 18; -fx-font-size: 12px; -fx-font-weight: bold;">
                                <font>
                                    <Font name="System Bold" size="12"/>
                                </font>
                            </Button>
                            <Button text="ðŸ—‘ï¸ Delete Selected" onAction="#handleDeleteQuiz"
                                    style="-fx-background-color: linear-gradient(to right, #f56565, #e53e3e); -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 8 18; -fx-font-size: 12px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(245,101,101,0.3), 5, 0, 0, 2);">
                                <font>
                                    <Font name="System Bold" size="12"/>
                                </font>
                            </Button>
                        </HBox>

                        <TableView fx:id="quizzesTable" VBox.vgrow="ALWAYS"
                                   style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-border-width: 1;">
                            <columns>
                                <TableColumn fx:id="quizIdColumn" text="ID" prefWidth="60" style="-fx-font-weight: bold;"/>
                                <TableColumn fx:id="quizTitleColumn" text="Quiz Title" prefWidth="500"/>
                                <TableColumn fx:id="quizCourseColumn" text="Course ID" prefWidth="120"/>
                                <TableColumn fx:id="quizQuestionsColumn" text="Questions" prefWidth="120"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <!-- QUIZ RESULTS TAB -->
            <Tab text="ðŸ“Š Quiz Results">
                <VBox spacing="20" style="-fx-padding: 25; -fx-background-color: transparent;">

                    <Label text="ðŸ“Š Quiz Results" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #0f172a;">
                        <font>
                            <Font name="System Bold" size="22"/>
                        </font>
                    </Label>

                    <!-- Quiz Selection Card -->
                    <VBox spacing="15" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 3);">
                        <Label text="ðŸ” Select Quiz" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #475569;">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <HBox spacing="15" alignment="CENTER_LEFT">
                            <Label text="Quiz:" style="-fx-font-size: 13px; -fx-text-fill: #475569; -fx-font-weight: bold; -fx-min-width: 70;">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Label>
                            <ComboBox fx:id="resultQuizCombo" prefWidth="350" promptText="Select a quiz to view results"
                                      style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-padding: 5; -fx-font-size: 13px;"
                                      HBox.hgrow="SOMETIMES" maxWidth="Infinity"/>
                            <Button text="ðŸ“‚ Load Results" onAction="#handleLoadResults"
                                    style="-fx-background-color: linear-gradient(to right, #0ea5e9, #06b6d4); -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 22; -fx-font-size: 13px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(14,165,233,0.3), 5, 0, 0, 2);">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Button>
                            <Button text="ðŸ“‘ View All Results" onAction="#handleViewAllResults"
                                    style="-fx-background-color: linear-gradient(to right, #10b981, #059669); -fx-text-fill: white; -fx-cursor: hand; -fx-background-radius: 8; -fx-padding: 10 22; -fx-font-size: 13px; -fx-font-weight: bold; -fx-effect: dropshadow(three-pass-box, rgba(16,185,129,0.3), 5, 0, 0, 2);">
                                <font>
                                    <Font name="System Bold" size="13"/>
                                </font>
                            </Button>
                        </HBox>
                    </VBox>

                    <!-- Results Table -->
                    <VBox spacing="12" VBox.vgrow="ALWAYS" style="-fx-background-color: white; -fx-padding: 25; -fx-background-radius: 12; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.1), 15, 0, 0, 3);">
                        <Label text="ðŸ“‹ Student Results" style="-fx-font-weight: bold; -fx-font-size: 16px; -fx-text-fill: #475569;">
                            <font>
                                <Font name="System Bold" size="16"/>
                            </font>
                        </Label>

                        <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS"
                                   style="-fx-background-radius: 8; -fx-border-color: #e2e8f0; -fx-border-radius: 8; -fx-border-width: 1;">
                            <columns>
                                <TableColumn fx:id="resultStudentIdColumn" text="Student ID" prefWidth="90" style="-fx-font-weight: bold;"/>
                                <TableColumn fx:id="resultStudentNameColumn" text="Student Name" prefWidth="200"/>
                                <TableColumn fx:id="resultQuizIdColumn" text="Quiz ID" prefWidth="80"/>
                                <TableColumn fx:id="resultQuizTitleColumn" text="Quiz Title" prefWidth="240"/>
                                <TableColumn fx:id="resultCourseCodeColumn" text="Course Code" prefWidth="120"/>
                                <TableColumn fx:id="resultScoreColumn" text="Score" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

        </TabPane>
    </center>

</BorderPane>

