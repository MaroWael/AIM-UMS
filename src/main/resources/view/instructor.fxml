<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<!--
instructor.fxml - Instructor panel UI
Provides tabs for viewing courses, students, managing quizzes and results
-->

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.ums.system.controller.InstructorController"
            prefHeight="700" prefWidth="1000"
            style="-fx-background-color: #f5f5f5;">

    <!-- Top: Header -->
    <top>
        <VBox style="-fx-background-color: #6dd5ed;">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>

            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="welcomeLabel" text="Welcome, Instructor!" style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button text="Logout" onAction="#handleLogout" style="-fx-background-color: white; -fx-text-fill: #2193b0; -fx-font-weight: bold; -fx-padding: 8 20; -fx-cursor: hand;"/>
            </HBox>

            <Label fx:id="userInfoLabel" text="Role: Instructor | ID: - | Department: -" style="-fx-text-fill: white; -fx-font-size: 12px;">
                <VBox.margin>
                    <Insets top="5"/>
                </VBox.margin>
            </Label>
        </VBox>
    </top>

    <!-- Center: Tab Pane -->
    <center>
        <TabPane tabClosingPolicy="UNAVAILABLE" style="-fx-padding: 10;">

            <!-- MY COURSES TAB -->
            <Tab text="My Courses">
                <VBox spacing="15" style="-fx-padding: 20;">

                    <Label text="My Assigned Courses" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <HBox spacing="10">
                        <Label text="Courses you are teaching" style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Button text="Refresh" onAction="#loadMyCourses" style="-fx-cursor: hand;"/>
                    </HBox>

                    <TableView fx:id="myCoursesTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="courseIdColumn" text="Code" prefWidth="100"/>
                            <TableColumn fx:id="courseNameColumn" text="Course Name" prefWidth="250"/>
                            <TableColumn fx:id="courseLevelColumn" text="Level" prefWidth="80"/>
                            <TableColumn fx:id="courseMajorColumn" text="Major" prefWidth="120"/>
                            <TableColumn fx:id="courseLectureTimeColumn" text="Lecture Time" prefWidth="120"/>
                            <TableColumn fx:id="courseStudentsColumn" text="Students" prefWidth="80"/>
                            <TableColumn fx:id="courseQuizzesColumn" text="Quizzes" prefWidth="80"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- STUDENTS TAB -->
            <Tab text="Students">
                <VBox spacing="15" style="-fx-padding: 20;">

                    <Label text="Students in My Courses" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Select Course:"/>
                        <ComboBox fx:id="courseCombo" prefWidth="300" promptText="Select a course"/>
                        <Button text="Load Students" onAction="#handleLoadStudents" style="-fx-background-color: #6dd5ed; -fx-text-fill: white; -fx-cursor: hand;"/>
                    </HBox>

                    <TableView fx:id="studentsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="studentIdColumn" text="ID" prefWidth="60"/>
                            <TableColumn fx:id="studentNameColumn" text="Name" prefWidth="200"/>
                            <TableColumn fx:id="studentEmailColumn" text="Email" prefWidth="220"/>
                            <TableColumn fx:id="studentLevelColumn" text="Level" prefWidth="80"/>
                            <TableColumn fx:id="studentMajorColumn" text="Major" prefWidth="150"/>
                            <TableColumn fx:id="studentDepartmentColumn" text="Department" prefWidth="150"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

            <!-- QUIZZES TAB -->
            <Tab text="My Quizzes">
                <VBox spacing="15" style="-fx-padding: 20;">

                    <Label text="Quiz Management" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <!-- Create Quiz Form -->
                    <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 15; -fx-background-radius: 5;">
                        <Label text="Create New Quiz" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>

                        <HBox spacing="10">
                            <TextField fx:id="quizTitleField" promptText="Quiz Title" prefWidth="300"/>
                            <ComboBox fx:id="quizCourseCombo" promptText="Select Course" prefWidth="250"/>
                            <Button text="Create Quiz" onAction="#handleCreateQuiz" style="-fx-background-color: #6dd5ed; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"/>
                        </HBox>
                    </VBox>

                    <!-- Quizzes Table -->
                    <VBox spacing="10" VBox.vgrow="ALWAYS">
                        <HBox spacing="10">
                            <Label text="My Quizzes" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                            <Region HBox.hgrow="ALWAYS"/>
                            <Button text="Refresh" onAction="#loadMyQuizzes" style="-fx-cursor: hand;"/>
                            <Button text="Delete Selected" onAction="#handleDeleteQuiz" style="-fx-background-color: #d32f2f; -fx-text-fill: white; -fx-cursor: hand;"/>
                        </HBox>

                        <TableView fx:id="quizzesTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="quizIdColumn" text="ID" prefWidth="50"/>
                                <TableColumn fx:id="quizTitleColumn" text="Title" prefWidth="400"/>
                                <TableColumn fx:id="quizCourseColumn" text="Course ID" prefWidth="100"/>
                                <TableColumn fx:id="quizQuestionsColumn" text="Questions" prefWidth="100"/>
                            </columns>
                        </TableView>
                    </VBox>
                </VBox>
            </Tab>

            <!-- QUIZ RESULTS TAB -->
            <Tab text="Quiz Results">
                <VBox spacing="15" style="-fx-padding: 20;">

                    <Label text="Quiz Results" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Select Quiz:"/>
                        <ComboBox fx:id="resultQuizCombo" prefWidth="300" promptText="Select a quiz"/>
                        <Button text="Load Results" onAction="#handleLoadResults" style="-fx-background-color: #6dd5ed; -fx-text-fill: white; -fx-cursor: hand;"/>
                        <Button text="View All Results" onAction="#handleViewAllResults" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-cursor: hand;"/>
                    </HBox>

                    <TableView fx:id="resultsTable" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="resultStudentIdColumn" text="Student ID" prefWidth="80"/>
                            <TableColumn fx:id="resultStudentNameColumn" text="Student Name" prefWidth="180"/>
                            <TableColumn fx:id="resultQuizIdColumn" text="Quiz ID" prefWidth="70"/>
                            <TableColumn fx:id="resultQuizTitleColumn" text="Quiz Title" prefWidth="200"/>
                            <TableColumn fx:id="resultCourseCodeColumn" text="Course Code" prefWidth="100"/>
                            <TableColumn fx:id="resultScoreColumn" text="Score" prefWidth="80"/>
                        </columns>
                    </TableView>
                </VBox>
            </Tab>

        </TabPane>
    </center>

</BorderPane>
